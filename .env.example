# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/educonnect-phase1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
BCRYPT_SALT_ROUNDS=12
OTP_EXPIRES_IN_MINUTES=10
INVITATION_EXPIRES_IN_HOURS=72

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# Cache Configuration
CACHE_TTL_DASHBOARD=900
CACHE_TTL_USER_SESSION=86400
CACHE_TTL_SCHOOL_PROFILE=3600
CACHE_TTL_OTP=600

# System Admin Configuration (Pre-configured credentials)
SYSTEM_ADMIN_EMAIL=admin@yourdomain.com
SYSTEM_ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password-here
SYSTEM_ADMIN_JWT_SECRET=your-system-admin-jwt-secret-here
SYSTEM_ADMIN_SESSION_TIMEOUT=28800